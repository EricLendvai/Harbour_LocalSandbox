{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SwitchOS",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows": {
                "command": "${command:remote-containers.reopenInContainer}",
                "options": {
                    "statusbar": {"label" : "<Open Container - Go to Ubuntu>","hide" : false}
                }
            },
            "linux": {
                "command": "${command:remote-containers.reopenLocally}",
                "options": {
                    "statusbar": {"label" : "<Close Container - Go to Windows>","hide" : false}
                }
            }
        },
        {
            "label": "RunDebug",
            "command": "${command:workbench.action.debug.start}",
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Debug>","hide" : false}
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "CompileDebug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows":{
                "command": "${workspaceFolder}\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"C:\\Harbour_EL",
                        "HB_ORM_ROOT":"C:\\Harbour_ORM",
                        "HB_FASTCGI_ROOT":"C:\\Harbour_FastCGI",
                        "EXEName":"Harbour_LocalSandbox",
                        "BuildMode":"debug",
                        "HB_COMPILER":"${input:CCompiler}",
//                        "HB_COMPILER":"mingw64",
                        "WebsiteDrive":"C:",
                        "SiteRootFolder":"\\Harbour_websites\\fcgi_Harbour_LocalSandbox\\"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                }
            },
            "linux":{
                "command": "sh ${workspaceFolder}/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"/src/Harbour_EL",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "HB_FASTCGI_ROOT":"/src/Harbour_FastCGI/",
                        "EXEName":"Harbour_LocalSandbox",
                        "BuildMode":"debug",
                        "HB_COMPILER":"gcc",
                        "WebsiteDrive":"",
                        "SiteRootFolder":"/var/www/Harbour_websites/fcgi_Harbour_LocalSandbox/"
                    },
                    "statusbar": {"label" : "<Compile Debug>","hide" : false}
                }
            }
        },
        {
            "label": "CompileRelease",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows":{
                "command": "${workspaceFolder}\\BuildEXE.bat",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"C:\\Harbour_EL",
                        "HB_ORM_ROOT":"C:\\Harbour_ORM",
                        "HB_FASTCGI_ROOT":"C:\\Harbour_FastCGI",
                        "EXEName":"Harbour_LocalSandbox",
                        "BuildMode":"release",
                        "HB_COMPILER":"${input:CCompiler}",
                        // "HB_COMPILER":"mingw64",
                        "WebsiteDrive":"C:",
                        "SiteRootFolder":"\\Harbour_websites\\fcgi_Harbour_LocalSandbox\\"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                }
            },
            "linux":{
                "command": "sh ${workspaceFolder}/BuildEXE.sh",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "env": {
                        "HB_EL_ROOT":"/src/Harbour_EL",
                        "HB_ORM_ROOT":"/src/Harbour_ORM",
                        "HB_FASTCGI_ROOT":"/src/Harbour_FastCGI",
                        "EXEName":"Harbour_LocalSandbox",
                        "BuildMode":"release",
                        "HB_COMPILER":"gcc",
                        "WebsiteDrive":"",
                        "SiteRootFolder":"/var/www/Harbour_websites/fcgi_Harbour_LocalSandbox/"
                    },
                    "statusbar": {"label" : "<Compile Release>","hide" : false}
                }
            }
        },
        {
            "label": "DelAllPPO",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del All PPO>","hide" : false}
            },
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "del ${workspaceFolder}\\*.ppo"
            },
            "linux":{
                "command": "rm ${workspaceFolder}/ *.ppo"
            }
        },
        {
            "label": "DelBuildCache",
            "type": "shell",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {"label" : "<Del Build Caches>","hide" : false}
            },
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "rd",
                // The first args was for "cmd", the active (second one), is for powershell
                // "args": ["${workspaceFolder}\\build\\win64\\","/Q","/S"]
                "args": ["-r","-fo","${workspaceFolder}\\build\\win64\\"]
            },
            "linux":{
                "command": "rm -rf ${workspaceFolder}/build/lin64/"
            }
        },
        {
            "type": "shell",
            "label": "Down",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Down>","hide" : false}
                },
                "command": "C:\\Harbour_FastCGI\\FCGITaskManagerBin\\FCGITaskManager.exe down http localhost 8164 /fcgi_Harbour_LocalSandbox/ C:/Harbour_websites/fcgi_Harbour_LocalSandbox/ Harbour_LocalSandbox",
            },
            "linux":{
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Down>","hide" : true}
                },
                "command": ""
            }
        },
        {
            "label": "ActivateHarbour_LocalSandbox",
            "type": "shell",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "C:\\Harbour_FastCGI\\FCGITaskManagerBin\\FCGITaskManager.exe activate http localhost 8164 /fcgi_Harbour_LocalSandbox/ C:/Harbour_websites/fcgi_Harbour_LocalSandbox/ Harbour_LocalSandbox",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Activate Harbour_LocalSandbox>","hide" : false}
                }
            },
            "linux":{
                "command": "",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Activate Harbour_LocalSandbox>","hide" : true}
                }
            }
        },
        {
            "label":"KillFcgiExe",
            "type": "shell",
            "options": {
                "statusbar": {"label" : "<Kill Harbour_LocalSandbox>","hide" : false}
            },
            "windows":{
                "command":"taskkill",
                "args": ["/IM","FCGIHarbour_LocalSandbox.exe","/f","/t"]
            },
            "linux":{
                "command":"killall",
                "args": ["FCGIHarbour_LocalSandbox.exe"]
            }
        },
        {
            "label": "BrowseHarbour_LocalSandbox",
            "type": "shell",
            "isBackground": true,
            "presentation": {"reveal": "never"},
            "windows":{
                "command": "explorer",
                "args": ["http://localhost:8164/fcgi_Harbour_LocalSandbox/"],
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Browse Harbour_LocalSandbox>","hide" : false}
                }
            },
            "linux":{
                "command": "",
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {"label" : "<Browse Harbour_LocalSandbox>","hide" : true}
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "CCompiler",
            "type": "pickString",
            "description": "Select C Compiler",
            "options": ["mingw64","msvc64"],
            "default": "mingw64"
        }
    ]
}